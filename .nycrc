{
    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "dist",
        "composite": true,
        "incremental": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "noUnusedLocals": false
    }, 
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.d.ts"
    ],
    "extension": [
        ".ts"
    ],
    "require": [
        "ts-node/register",
        "source-map-support/register"
    ],
    "files": [
        "src/index.d.ts"
    ],
    "all": true
}