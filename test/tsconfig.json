{
    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "rootDir": "../",
        "outDir": "dist",
        "composite": true,
        "incremental": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "noUnusedLocals": false
    }, 
    "include": [
        "../src/**/*.ts",
        "../test/**/*.ts",
        "../test/**/*.spec.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "extension": [
        ".ts",
        ".spec.ts"
    ],
    "files": [
        "../src/index.d.ts"
    ]
}